{% comment %}
  Neon Rain Sections for Dirtylolli Shopify Theme
  Custom sections to support the Neon Rain page design
{% endcomment %}

<!-- Neon Rain Hero Section -->
{% schema %}
{
  "name": "Neon Rain Hero",
  "tag": "section",
  "class": "neon-rain-hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Neon Rain Collection"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Experience the future of streetwear"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#00ffff"
    },
    {
      "type": "checkbox",
      "id": "enable_rain_effect",
      "label": "Enable Rain Effect",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_neon_glow",
      "label": "Enable Neon Glow",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading Size",
          "options": [
            { "value": "h1", "label": "H1" },
            { "value": "h2", "label": "H2" },
            { "value": "h3", "label": "H3" }
          ],
          "default": "h1"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text Alignment",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "right", "label": "Right" }
          ],
          "default": "center"
        },
        {
          "type": "color",
          "id": "color",
          "label": "Color",
          "default": "#00ffff"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text Alignment",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "right", "label": "Right" }
          ],
          "default": "center"
        },
        {
          "type": "color",
          "id": "color",
          "label": "Color",
          "default": "#cccccc"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Neon Rain Hero",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="relative min-h-screen flex items-center justify-center overflow-hidden bg-noir text-white font-body" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
  <div class="text-center z-20 relative max-w-6xl px-8">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'heading' %}
          <{{ block.settings.heading_size }} class="text-6xl md:text-8xl font-headline mb-8 bg-gradient-to-r from-accent via-primary to-neon bg-clip-text text-transparent neon-glow animate-pulse" style="text-align: {{ block.settings.text_alignment }}; color: {{ block.settings.color }};">
            {{ block.settings.heading }}
          </{{ block.settings.heading_size }}>
        {% when 'text' %}
          <div class="text-xl md:text-2xl text-gray-300 leading-relaxed max-w-4xl mx-auto" style="text-align: {{ block.settings.text_alignment }}; color: {{ block.settings.color }};">
            {{ block.settings.text }}
          </div>
      {% endcase %}
    {% endfor %}
  </div>
  
  {% if section.settings.enable_rain_effect %}
    <div class="fixed inset-0 pointer-events-none z-10">
      <div class="relative w-full h-full">
        {% for i in (1..20) %}
          <div class="absolute top-0 w-0.5 h-24 bg-gradient-to-b from-transparent via-accent to-primary animate-rain" style="left: {{ i | times: 5 }}%; animation-delay: {{ i | times: 0.1 }}s;"></div>
        {% endfor %}
      </div>
    </div>
  {% endif %}
  
  {% if section.settings.enable_neon_glow %}
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 rounded-full bg-gradient-to-r from-accent/20 to-primary/20 animate-pulse pointer-events-none z-10"></div>
  {% endif %}
</div>

<!-- Enhanced Tailwind-based styles -->
<style>
  /* Custom animations using your Tailwind config */
  @keyframes rainDrop {
    0% {
      transform: translateY(-100vh);
      opacity: 0;
    }
    10% {
      opacity: 0.8;
    }
    90% {
      opacity: 0.8;
    }
    100% {
      transform: translateY(100vh);
      opacity: 0;
    }
  }
  
  /* Glitch effect using your colors */
  @keyframes glitch {
    0%, 100% { transform: translate(0); }
    20% { transform: translate(-2px, 2px); }
    40% { transform: translate(-2px, -2px); }
    60% { transform: translate(2px, 2px); }
    80% { transform: translate(2px, -2px); }
  }
  
  /* Neon glow using your accent colors */
  .neon-glow {
    text-shadow: 
      0 0 5px #00F0FF,
      0 0 10px #00F0FF,
      0 0 15px #00F0FF,
      0 0 20px #00F0FF,
      0 0 35px #00F0FF,
      0 0 40px #00F0FF;
  }
  
  /* Cyberpunk grid using your accent color */
  .cyber-grid {
    background-image: 
      linear-gradient(rgba(0, 240, 255, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 240, 255, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
  }
  
  /* Enhanced hover effects */
  .neon-hover:hover {
    text-shadow: 
      0 0 5px currentColor,
      0 0 10px currentColor,
      0 0 15px currentColor,
      0 0 20px currentColor;
    transition: text-shadow 0.3s ease;
  }
</style>
