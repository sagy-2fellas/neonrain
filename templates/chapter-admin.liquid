<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Chapter unlock functionality
    const unlockButtons = document.querySelectorAll('button[class*="Unlock Chapter"]');
    
    unlockButtons.forEach(button => {
      button.addEventListener('click', function() {
        const chapterCard = this.closest('.bg-gradient-to-br');
        const chapterNumber = chapterCard.querySelector('h3').textContent.split(' ')[1];
        
        // Show confirmation
        if (confirm(`Are you sure you want to unlock Chapter ${chapterNumber}?`)) {
          // Update UI
          chapterCard.classList.remove('from-muted/20', 'to-muted/10', 'border-muted/30');
          chapterCard.classList.add('from-accent/20', 'to-primary/20', 'border-accent/30');
          
          const statusSpan = chapterCard.querySelector('.px-3.py-1');
          statusSpan.classList.remove('bg-yellow-500/20', 'text-yellow-400');
          statusSpan.classList.add('bg-green-500/20', 'text-green-400');
          statusSpan.textContent = 'Active';
          
          const title = chapterCard.querySelector('h3');
          title.classList.remove('text-muted');
          title.classList.add('text-accent');
          
          const description = chapterCard.querySelector('p');
          description.classList.remove('text-gray-400');
          description.classList.add('text-gray-300');
          
          // Hide input and button
          const input = chapterCard.querySelector('input');
          const button = chapterCard.querySelector('button');
          if (input) input.style.display = 'none';
          if (button) button.style.display = 'none';
          
          // Show success message
          const successDiv = document.createElement('div');
          successDiv.className = 'mt-2 text-sm text-green-400';
          successDiv.textContent = 'Chapter unlocked successfully!';
          chapterCard.appendChild(successDiv);
          
          setTimeout(() => {
            successDiv.remove();
          }, 3000);
        }
      });
    });
    
    // Bulk actions
    const bulkButtons = document.querySelectorAll('.bg-gradient-to-r');
    bulkButtons.forEach(button => {
      if (button.textContent.includes('Unlock All')) {
        button.addEventListener('click', function() {
          if (confirm('Are you sure you want to unlock all chapters?')) {
            unlockButtons.forEach(btn => btn.click());
          }
        });
      }
    });
  });
</script>

