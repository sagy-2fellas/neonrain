{%- comment -%}
  Footer section for Neon Rain theme
{%- endcomment -%}

<footer class="footer">
  <div class="footer__container">
    <div class="footer__content">
      <div class="footer__section">
        <h3 class="footer__title">Dirtylolli</h3>
        <p class="footer__description">
          Cyberpunk streetwear for the digital age.
        </p>
      </div>
      
      <div class="footer__section">
        <h4 class="footer__subtitle">Quick Links</h4>
        <ul class="footer__links">
          <li><a href="{{ routes.root_url }}">Home</a></li>
          <li><a href="{{ routes.collections_url }}">Collections</a></li>
          <li><a href="{{ pages.about.url }}">About</a></li>
          <li><a href="{{ pages.contact.url }}">Contact</a></li>
        </ul>
      </div>
      
      <div class="footer__section">
        <h4 class="footer__subtitle">Follow Us</h4>
        <div class="footer__social">
          <a href="#" class="footer__social-link">Instagram</a>
          <a href="#" class="footer__social-link">Twitter</a>
          <a href="#" class="footer__social-link">TikTok</a>
        </div>
      </div>
    </div>
    
    <div class="footer__bottom">
      <p class="footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} Dirtylolli. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(135deg, #000 0%, #1a0033 100%);
    border-top: 1px solid rgba(0, 255, 255, 0.3);
    margin-top: auto;
  }
  
  .footer__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem 1rem;
  }
  
  .footer__content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }
  
  .footer__title {
    color: #00ffff;
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }
  
  .footer__subtitle {
    color: #ff00ff;
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }
  
  .footer__description {
    color: #ccc;
    line-height: 1.6;
  }
  
  .footer__links {
    list-style: none;
  }
  
  .footer__links li {
    margin-bottom: 0.5rem;
  }
  
  .footer__links a {
    color: #ccc;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .footer__links a:hover {
    color: #00ffff;
  }
  
  .footer__social {
    display: flex;
    gap: 1rem;
  }
  
  .footer__social-link {
    color: #ff00ff;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .footer__social-link:hover {
    color: #00ffff;
  }
  
  .footer__bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 1rem;
    text-align: center;
  }
  
  .footer__copyright {
    color: #666;
    font-size: 0.9rem;
  }
  
  @media (max-width: 768px) {
    .footer__container {
      padding: 2rem 1rem 1rem;
    }
    
    .footer__content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
